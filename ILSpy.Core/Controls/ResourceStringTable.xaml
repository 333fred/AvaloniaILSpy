		<Grid.RowDefinitions>
			<RowDefinition Height="30" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<TextBlock Margin="5" Text="String Table(Name/Value)"
			   FontFamily="Segoe UI"
			   FontWeight="Bold"
			   FontSize="12" />
		<ListBox Name="resourceListView"
			  FontFamily="Segoe UI"
			  FontSize="9"
			  Grid.Row="1">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<TextBlock Text="{Binding Key}" Grid.Column="0"/>
						<TextBlock Text="{Binding Value}" Grid.Column="1"/>
					</Grid>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
